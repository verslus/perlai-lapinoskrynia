generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CONSULTANT
  ADMIN
}

enum AttemptStatus {
  NOT_STARTED
  STARTED
  FINISHED
  REPORT_VIEWED
}

enum EventType {
  ACCESS_LINK_CREATED
  ACCESS_LINK_ROTATED
  TEST_STARTED
  ANSWERS_SAVED
  TEST_FINISHED
  REPORT_VIEWED
  DATA_DELETED
  SCORING_ERROR
  IMPORT_ERROR
}

model User {
  id            String       @id @default(cuid())
  email         String       @unique
  passwordHash  String
  role          Role
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  portals       ClientPortal[]
  auditEvents   AuditEvent[]
}

model Test {
  id          String        @id @default(cuid())
  slug        String        @unique
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  versions    TestVersion[]
}

model TestVersion {
  id                 String       @id @default(cuid())
  testId             String
  version            Int
  language           String
  title              String
  description        String
  scoringConfigJson  Json
  isActive           Boolean      @default(true)
  createdAt          DateTime     @default(now())
  test               Test         @relation(fields: [testId], references: [id], onDelete: Cascade)
  questions          Question[]
  accessLinks        AccessLink[]
  attempts           Attempt[]

  @@unique([testId, version, language])
}

model Question {
  id             String       @id @default(cuid())
  testVersionId  String
  questionOrder  Int
  text           String
  dimension      String
  isReverse      Boolean      @default(false)
  testVersion    TestVersion  @relation(fields: [testVersionId], references: [id], onDelete: Cascade)

  @@unique([testVersionId, questionOrder])
}

model ClientPortal {
  id                    String       @id @default(cuid())
  internalClientId      String
  portalToken           String       @unique
  consultantId          String
  encryptedEmail        String?
  createdAt             DateTime     @default(now())
  deletedAt             DateTime?
  consultant            User         @relation(fields: [consultantId], references: [id], onDelete: Restrict)
  accessLinks           AccessLink[]
  attempts              Attempt[]
  auditEvents           AuditEvent[]

  @@index([consultantId])
}

model AccessLink {
  id             String       @id @default(cuid())
  token          String       @unique
  portalId       String
  testVersionId  String
  active         Boolean      @default(true)
  createdAt      DateTime     @default(now())
  rotatedAt      DateTime?
  portal         ClientPortal @relation(fields: [portalId], references: [id], onDelete: Cascade)
  testVersion    TestVersion  @relation(fields: [testVersionId], references: [id], onDelete: Restrict)
  attempts       Attempt[]
}

model Attempt {
  id                       String        @id @default(cuid())
  portalId                 String
  accessLinkId             String?
  testVersionId            String
  status                   AttemptStatus @default(NOT_STARTED)
  startedAt                DateTime?
  finishedAt               DateTime?
  reportViewedAt           DateTime?
  answerDurationSec        Int           @default(0)
  reportDurationSec        Int           @default(0)
  answersJson              Json?
  scoreJson                Json?
  fullReportJson           Json?
  consultantSummaryJson    Json?
  createdAt                DateTime      @default(now())
  updatedAt                DateTime      @updatedAt
  deletedAt                DateTime?
  portal                   ClientPortal  @relation(fields: [portalId], references: [id], onDelete: Cascade)
  accessLink               AccessLink?   @relation(fields: [accessLinkId], references: [id], onDelete: SetNull)
  testVersion              TestVersion   @relation(fields: [testVersionId], references: [id], onDelete: Restrict)
  consent                  Consent?
  feedback                 Feedback?
  auditEvents              AuditEvent[]

  @@index([portalId, createdAt])
}

model Consent {
  id             String    @id @default(cuid())
  attemptId      String    @unique
  policyVersion  String
  consentedAt    DateTime  @default(now())
  attempt        Attempt   @relation(fields: [attemptId], references: [id], onDelete: Cascade)
}

model Feedback {
  id           String    @id @default(cuid())
  attemptId    String    @unique
  clarity      Int
  usefulness   Int
  interest     Int
  comment      String?
  createdAt    DateTime  @default(now())
  attempt      Attempt   @relation(fields: [attemptId], references: [id], onDelete: Cascade)
}

model AuditEvent {
  id           String     @id @default(cuid())
  type         EventType
  actorUserId  String?
  portalId     String?
  attemptId    String?
  metadataJson Json?
  createdAt    DateTime   @default(now())
  actorUser    User?      @relation(fields: [actorUserId], references: [id], onDelete: SetNull)
  portal       ClientPortal? @relation(fields: [portalId], references: [id], onDelete: SetNull)
  attempt      Attempt?   @relation(fields: [attemptId], references: [id], onDelete: SetNull)

  @@index([type, createdAt])
}
